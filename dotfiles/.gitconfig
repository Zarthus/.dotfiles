[color]
    diff        = auto
    status      = auto
    branch      = auto
    interactive = auto
    ui          = true
    pager       = true

[format]
    pretty = "%nCommit:  %C(bold white)%H%nRefs:   %C(cyan bold)%d%nDate:    (%C(red)%ar%Creset) %ai%nAuthor:  %C(yellow)%aN <%aE>%nSubject: %C(green)%B"

[log]
    decorate = full

[core]
    pager        = less -R
    excludesfile = ~/.config/gitignore
    autocrlf     = false

[branch]
    autosetuprebase = always

[push]
    default = simple

[alias]
    st = status
    s = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    amend = commit --amend
    tags = tag -l
    remotes = remote -v

    log-full = log --decorate --stat --graph --pretty=format:\"%d %Cgreen%h%Creset (%ar - %Cred%an%Creset), %s%n\"
    serve = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
    whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
    whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
    changelog = !sh -c 'git log --pretty=format:\"* %h %B\" $1..HEAD | sort -k 3' -
    t = tag -l
    a = add -A .
    l = log
    dsf = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy  | less --tabs=4 -RFX; }; f"

    please = push --force-with-lease

[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red 52
    newNormal = green
    newHighlight = green 22
